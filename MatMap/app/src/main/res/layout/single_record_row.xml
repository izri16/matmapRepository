<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#222222"
    android:paddingBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/singleRecordSSID"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="45px"
        android:textColor="#FFFFFF"
        android:paddingLeft="15px"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/singleRecordStrength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25px"
        android:paddingLeft="15px"
        android:textColor="#20C0CF"
        android:layout_below="@id/singleRecordSSID"/>

    <TextView
        android:id="@+id/singleRecordBSSID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25px"
        android:textColor="#20C0CF"
        android:paddingRight="15px"
        android:layout_below="@id/singleRecordSSID"
        android:layout_alignRight="@id/singleRecordSSID"/>

</RelativeLayout>