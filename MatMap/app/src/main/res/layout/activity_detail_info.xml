<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#222222"
    tools:context="com.example.matmap.DetailInfo"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:paddingTop="10dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:text="Record ID"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="40px"
                android:paddingLeft="15px"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/singleRecordID"
                android:layout_width="fill_parent"
                android:textSize="30px"
                android:paddingLeft="15px"
                android:textColor="#20C0CF"
                android:layout_height="wrap_content"/>

        </LinearLayout>




    <LinearLayout
        android:layout_width="fill_parent"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <TextView
        android:text="Group ID"
        android:layout_width="fill_parent"
        android:textSize="40px"
        android:layout_height="wrap_content"
        android:paddingLeft="15px"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/singleRecordGroupID"
        android:layout_width="fill_parent"
        android:textSize="30px"
        android:layout_height="wrap_content"
        android:paddingLeft="15px"
        android:textColor="#20C0CF"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:text="Room name"
            android:layout_width="fill_parent"
            android:textSize="40px"
            android:layout_height="wrap_content"
            android:paddingLeft="15px"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/singleRecordRoomName"
            android:layout_width="fill_parent"
            android:textSize="30px"
            android:layout_height="wrap_content"
            android:paddingLeft="15px"
            android:textColor="#20C0CF"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:text="SSID"
            android:layout_width="fill_parent"
            android:textSize="40px"
            android:layout_height="wrap_content"
            android:paddingLeft="15px"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/singleRecordSSID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:paddingLeft="15px"
            android:textColor="#20C0CF"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:text="BSSID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="40px"
            android:paddingLeft="15px"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/singleRecordBSSID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:paddingLeft="15px"
            android:textColor="#20C0CF"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:text="Strength"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="40px"
            android:paddingLeft="15px"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/singleRecordStrength"
            android:layout_width="fill_parent"
            android:textSize="30px"
            android:layout_height="wrap_content"
            android:paddingLeft="15px"
            android:textColor="#20C0CF"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <TextView
            android:text="Device"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="40px"
            android:paddingLeft="15px"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/singleRecordDevice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:paddingLeft="15px"
            android:textColor="#20C0CF"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="Timestamp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="40px"
            android:paddingLeft="15px"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/singleRecordTimestamp"
            android:layout_width="fill_parent"
            android:textSize="30px"
            android:layout_height="wrap_content"
            android:paddingLeft="15px"
            android:textColor="#20C0CF"/>

    </LinearLayout>

</LinearLayout>
</ScrollView>
