<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.matmap"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Search"
            android:label="@string/title_activity_search"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.matmap.MainActivity" />
        </activity>
        <activity
            android:name=".NewLocation"
            android:label="@string/title_activity_new_location"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.matmap.MainActivity" />
        </activity>
        <activity
            android:name=".History"
            android:label="@string/title_activity_history" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.matmap.MainActivity" />
        </activity>
        <activity
            android:name=".Help"
            android:label="@string/title_activity_help" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.matmap.MainActivity" />
        </activity>
        <activity
            android:name=".TemporaryLocalisation"
            android:label="MatMap locator" >
        </activity>
        <activity
            android:name=".RecordsManager"
            android:label="@string/title_activity_record_manager" >
        </activity>
        <activity
            android:name=".RecordGroup"
            android:label="@string/title_activity_record_group" >
        </activity>
        <activity
            android:name=".DetailInfo"
            android:label="Detail info" >
        </activity>
        <activity
            android:name=".DeleteManager"
            android:label="@string/title_activity_records_delete_manager" >
        </activity>
        <activity
            android:name=".FindRecordByName"
            android:label="Find records" >
        </activity>
        <activity
            android:name=".RenameRecord"
            android:label="Rename record" >
        </activity>
    </application>

</manifest>
